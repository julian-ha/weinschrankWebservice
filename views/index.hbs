<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column">
               <h1 class="title is-2">Dashboard des WeinschrankService</h1>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="title is-5">Weinfächer</h2>

        <div class="columns has-text-centered">
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Fach 1</p>
                    <p class="dashboard-item-kennzahl">{{ data.[0].bottle1 }}</p>
                </div>
            </div>
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Fach 2</p>
                    <p class="dashboard-item-kennzahl">{{ data.[0].bottle2 }}</p>

                </div>
            </div>
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Fach3</p>
                    <p class="dashboard-item-kennzahl">{{data.[0].bottle3 }}</p>
                </div>
            </div>



            
        </div>
        <h2 class="title is-5">Zusätzliche Daten</h2>

        <div class="columns has-text-centered">
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Temperatur</p>
                    <p class="dashboard-item-kennzahl">{{ data.[0].temperature }}</p>
                </div>
            </div>
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Luftfeuchtigkeit</p>
                    <p class="dashboard-item-kennzahl">{{ data.[0].humidity }}</p>

                </div>
            </div>
            <div class="column">
                <div class="dashboard-item">
                    <p class="dashboard-item-head">Ob die Tür offen ist</p>
                    <p class="dashboard-item-kennzahl">{{ data.[0].door_open }}</p>
                </div>
            </div>
        </div>
    </div>
</section>
